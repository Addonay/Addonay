    // =============================================================================
    // FONT CONFIGURATION
    // =============================================================================
    "ui_font_size": 18,
    "ui_font_family": "Victor Mono",
    "buffer_font_size": 18,
    // "buffer_font_family": "Dank Mono",
    "buffer_font_family": "Victor Mono",
    "buffer_font_features": {
        "calt": true
    },
    // =============================================================================
    // UI PANELS & LAYOUT
    // =============================================================================
    "project_panel": {
        "hide_hidden": false,
        "default_width": 210.0,
        "button": false,
        "dock": "right",
        "auto_fold_dirs": false,
        "indent_guides": {
            "show": "never"
        }
    },
    "outline_panel": {
        "indent_guides": {
            "show": "never"
        }
    },
    "gutter": {
        "min_line_number_digits": 0,
        "runnables": true
    },
    "git": {
        "inline_blame": {
            "enabled": true,
            "show_commit_summary": true,
            "padding": 9
        }
    },
    "tab_bar": {
        "show": true,
        "show_nav_history_buttons": true,
        "show_tab_bar_buttons": false
    },
    "tabs": {
        "git_status": true,
        "file_icons": true,
        "show_diagnostics": "all"
    },
    "toolbar": {
        "breadcrumbs": false,
        "selections_menu": false,
        "quick_actions": false,
        "code_actions": true
    },
    "file_types": {
        "json": ["jsonc"]
    },
    // =============================================================================
    // TERMINAL CONFIGURATION
    // =============================================================================
    "terminal": {
        "font_family": "Victor Mono",
        "default_width": 1200,
        "cursor_shape": "bar",
        "toolbar": {
            "breadcrumbs": false
        },
        "detect_venv": {
            "on": {
                "directories": [".env", "env", ".venv", "venv"],
                "activate_script": "default"
            }
        }
    },
    // =============================================================================
    // VISUAL GUIDES & INDICATORS
    // =============================================================================
    "indent_guides": {
        "enabled": true,
        "coloring": "indent_aware",
        "line_width": 1
    },
    // =============================================================================
    // DIAGNOSTICS & ERROR HANDLING
    // =============================================================================
    "diagnostics": {
        "include_warnings": true,
        "inline": {
            "enabled": true,
            "update_debounce_ms": 150,
            "padding": 4,
            "min_column": 0,
            "max_severity": null
        }
    },
    // =============================================================================
    // AI ASSISTANT & COPILOT CONFIGURATION
    // =============================================================================
    "agent": {
        "use_modifier_to_send": false,
        "notify_when_agent_waiting": "all_screens",
        "dock": "left",
        "play_sound_when_agent_done": false,
        "always_allow_tool_actions": false,
        "default_profile": "write",
        "default_model": {
            "provider": "copilot_chat",
            "model": "claude-opus-4.5"
        },
        "inline_assistant_model": {
            "provider": "copilot_chat",
            "model": "oswe-vscode-prime"
        },
        "profiles": {
            "plan": {
                "name": "Plan",
                "tools": {
                    "copy_path": false,
                    "diagnostics": true,
                    "fetch": true,
                    "find_path": true,
                    "grep": true,
                    "list_directory": true,
                    "now": true,
                    "open": true,
                    "read_file": true,
                    "terminal": false,
                    "thinking": true
                },
                "enable_all_context_servers": false,
                "context_servers": {}
            },
            "ask": {
                "name": "Ask",
                "tools": {
                    "contents": true,
                    "diagnostics": true,
                    "fetch": true,
                    "list_directory": true,
                    "project_notifications": false,
                    "now": true,
                    "find_path": true,
                    "read_file": true,
                    "open": true,
                    "grep": true,
                    "thinking": true,
                    "web_search": true,
                    "copy_path": false
                },
                "enable_all_context_servers": false,
                "context_servers": {
                    "mcp-server-github": {
                        "tools": {
                            "get_issue_comments": false,
                            "get_issue": false,
                            "get_file_contents": false,
                            "get_commit": false,
                            "fork_repository": false,
                            "delete_pending_pull_request_review": false,
                            "delete_file": false,
                            "create_repository": false,
                            "create_pull_request": false,
                            "create_pending_pull_request_review": false,
                            "create_or_update_file": false,
                            "create_issue": false,
                            "create_branch": false,
                            "create_and_submit_pull_request_review": false,
                            "assign_copilot_to_issue": false,
                            "add_sub_issue": false,
                            "add_issue_comment": false,
                            "add_comment_to_pending_review": false
                        }
                    },
                    "mcp-server-puppeteer": {
                        "tools": {
                            "puppeteer_click": true,
                            "puppeteer_evaluate": true,
                            "puppeteer_fill": true,
                            "puppeteer_screenshot": true,
                            "puppeteer_hover": true,
                            "puppeteer_navigate": true,
                            "puppeteer_select": true
                        }
                    },
                    "mcp-server-sequential-thinking": {
                        "tools": {
                            "sequentialthinking": true
                        }
                    },
                    "mcp-server-context7": {
                        "tools": {
                            "resolve-library-id": true,
                            "get-library-docs": true
                        }
                    }
                }
            },
            "write": {
                "name": "Write",
                "enable_all_context_servers": true,
                "context_servers": {
                    "svelte": {
                        "tools": {
                            "list-sections": true,
                            "get-documentation": true,
                            "svelte-autofixer": true,
                            "playground-link": true
                        }
                    }
                },
                "tools": {
                    "copy_path": true,
                    "create_directory": true,
                    "create_file": true,
                    "delete_path": true,
                    "diagnostics": true,
                    "edit_file": true,
                    "fetch": true,
                    "find_path": true,
                    "grep": true,
                    "list_directory": true,
                    "move_path": true,
                    "now": true,
                    "open": true,
                    "read_file": true,
                    "terminal": true,
                    "thinking": true,
                    "web_search": true
                }
            }
        }
    },
    // Edit predictions and code completion
    "edit_predictions": {
        "mode": "subtle",
        "enabled_in_text_threads": false,
        "copilot": {
            "proxy": null,
            "proxy_no_verify": null,
            "enterprise_uri": null
        }
    },
    "show_edit_predictions": true,
    "features": {
        "edit_prediction_provider": "zed"
        // "edit_prediction_provider": "supermaven"
        // "edit_prediction_provider": "zed"
    },
    // =============================================================================
    // LANGUAGE SERVER PROTOCOL (LSP) CONFIGURATION
    // =============================================================================
    "lsp": {
        // ESLint configuration - DISABLED (using Biome instead)
        "eslint": {
            "settings": {
                "codeActionsOnSave": {
                    "rules": ["import/order", ""]
                },
                "ruleCustomizations": {
                    "rule": "*",
                    "severity": "warn"
                }
            }
        },
        // Python Ruff linter and formatter
        "ruff": {
            "initialization_options": {
                "settings": {
                    "lineLength": 80,
                    "lint": {
                        "extendSelect": ["I"]
                    }
                }
            }
        },
        "vtls": {
            "settings": {
                "typescript": {
                    "tsserver": {
                        "maxTsServerMemory": 1536
                    }
                }
            }
        },
        // TypeScript Language Server with package.json auto-imports
        "typescript-language-server": {
            "settings": {
                "typescript": {
                    "preferences": {
                        "includePackageJsonAutoImports": "on"
                    }
                }
            }
        }
    },
