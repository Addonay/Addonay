    // =============================================================================
    // CONTEXT SERVERS & TELEMETRY
    // =============================================================================
    "context_servers": {
        "svelte": {
            "enabled": true,
            "command": "bunx",
            "args": ["-y", "@sveltejs/mcp"],
            "env": {}
        },
        "mcp-server-context7": {
            "enabled": true,
            "settings": {
                "default_minimum_tokens": "10000"
            }
        },
        "playwright": {
            "enabled": true,
            "command": "bunx",
            "args": ["@playwright/mcp@latest"],
            "env": {}
        }
